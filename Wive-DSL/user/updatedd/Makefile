CFLAGS += -Os

SHELL	= /bin/sh -e

SUBDIRS = libexception_handle src src/plugins Documentation scripts updatedd-wrapper

define recursive 
	@for i in $(SUBDIRS); do		\
		$(MAKE) -C $$i $@;		\
	done
endef

all: build-stamp
build-stamp:
	@for i in $(SUBDIRS); do		\
		$(MAKE) -C $$i all;		\
	done
	touch build-stamp

install: all
	$(recursive)

uninstall:
	$(recursive)

clean:
	$(recursive)
	$(RM) build-stamp

distclean: clean
	$(recursive)
	$(RM) Makefile
	$(RM) build
	$(RM) config.status
	$(RM) config.log
	$(RM) config.h
	$(RM) version.h

.PHONY: all install uninstall distclean

romfs:
	$(ROMFSINST)  ./src/updatedd /bin/updatedd
